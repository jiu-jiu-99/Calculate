<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"

    android:layout_height="match_parent"

    android:layout_below="@+id/textView"

    android:layout_alignParentStart="true"

    android:rowCount="6"

    android:columnCount="4"

    android:layout_alignParentLeft="true">

    <TextView

        android:id="@+id/text2"

        android:layout_width="350dp"

        android:layout_height="wrap_content"

        android:layout_columnSpan="4"

        android:layout_marginLeft="4px"

        android:gravity="left"

        android:textSize="50dp" />


    <Button

        android:id="@+id/btn1"

        android:text="1"

        android:textSize="26sp" />

    <Button

        android:id="@+id/btn2"

        android:text="2"

        android:textSize="26sp" />

    <Button

        android:id="@+id/btn3"

        android:text="3"

        android:textSize="26sp" />

    <Button

        android:id="@+id/btn11"

        android:text="+"

        android:textSize="26sp" />

    <Button

        android:id="@+id/btn4"

        android:text="4"

        android:textSize="26sp" />

    <Button

        android:id="@+id/btn5"

        android:text="5"

        android:textSize="26sp" />

    <Button

        android:id="@+id/btn6"

        android:text="6"

        android:textSize="26sp" />

    <Button

        android:id="@+id/btn12"

        android:text="-"

        android:textSize="26sp" />

    <Button

        android:id="@+id/btn7"

        android:text="7"

        android:textSize="26sp" />

    <Button

        android:id="@+id/btn8"

        android:text="8"

        android:textSize="26sp" />

    <Button

        android:id="@+id/btn9"

        android:text="9"

        android:textSize="26sp" />

    <Button

        android:id="@+id/btn13"

        android:text="ร"

        android:textSize="26sp" />

    <Button

        android:id="@+id/btn17"

        android:text="."

        android:textSize="26sp" />

    <Button

        android:id="@+id/btn10"

        android:text="0"

        android:textSize="26sp" />

    <Button

        android:id="@+id/btn15"

        android:text="="

        android:textSize="26sp" />

    <Button

        android:id="@+id/btn14"

        android:text="รท"

        android:textSize="26sp" />

    <ImageButton

        android:id="@+id/btn16"

        android:layout_width="89dp"
        android:layout_height="76dp"
        app:srcCompat="@android:drawable/ic_input_delete" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff=""
        android:textOn="" />

    <ToggleButton
        android:id="@+id/tb1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:textOff="close"
        android:textOn="open" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="350dp"

        android:layout_height="wrap_content"

        android:layout_columnSpan="4"

        android:layout_marginLeft="4px"

        android:gravity="left"

        android:textSize="50dp"

        app:srcCompat="@mipmap/a" />



</GridLayout>


